<UserControl x:Class="PokemonBattleOnline.PBO.Lobby.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="180" Padding="5" BorderBrush="#aaa" BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="服务器" Margin="2"/>
        <TextBlock Text="用户名" Grid.Row="1" Margin="2"/>
        <ComboBox Name="servers" Margin="40,0,0,0" IsEditable="True"/>
        <TextBox Name="name" Grid.Row="1" Margin="40,0,0,0"/>
        <Button Name="button" Content="登录" Margin="0,5,0,0" Grid.Row="2" Click="button_Click"/>
    </Grid>
</UserControl>
